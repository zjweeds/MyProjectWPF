<Window x:Class="BillManageWPF.MertoUIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MertoUIWindow" Height="600" Width="1200"
          WindowStyle="None" 
        WindowState="Maximized"
        AllowsTransparency="True">
    <Grid Background="Purple">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition />
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button  Name="btnEXIT" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,20,0" BorderThickness="0" Click="Button_Click" MouseEnter="Button_MouseEnter" Width="47" MinWidth="45" MaxWidth="50" >
                <Button.Background>
                    <ImageBrush ImageSource="Skin/Button/xn.png"/>
                </Button.Background>
            </Button>
            <TextBlock  Grid.Column="1" Text="欢迎使用票据通" HorizontalAlignment="Center"  Margin="0,20,0,0" FontFamily="微软雅黑" Foreground="White" FontSize="16"/>
        </Grid>
        <TextBlock Grid.Row="1" HorizontalAlignment="Left" Margin="100,0,0,0" MaxWidth="200" TextAlignment="Center"  Text="开  始" FontFamily="微软雅黑" FontSize="60" Foreground="White"/>
        <Grid Grid.Row="2" Margin="-1,0,1,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"  Name="tbUserName" VerticalAlignment="Center" Text="莠草"  MaxWidth="200"  TextAlignment="Right"  FontFamily="微软雅黑" FontSize="18" Foreground="White"/>
                <Image  Grid.Column="1" ToolTip="点击设置个人信息" Name="imUserPhoto" Margin="15,0,0,0" HorizontalAlignment="Left" Source="/BillManageWPF;component/Skin/ico/user.jpg"  MouseEnter="imUserPhoto_MouseEnter" MouseDown="imUserPhoto_MouseDown" MouseLeave="imUserPhoto_MouseLeave" />
            </Grid>
        </Grid>
        <Grid Grid.Row="4">
            <UniformGrid  Margin="100,10,100,80" Columns="3" Rows="2">
                <Grid Margin="5">
                    <Grid  Name="btnTemplateIcon" Margin="2,2,2,2"  Visibility="Visible" MouseEnter="btnTemplateIcon_MouseEnter"> <!--Background="#FFE65618"  >-->
                        <Border BorderThickness="5" BorderBrush="DarkGreen"  CornerRadius="10,10,10,10"  Name="top">
                            <Grid Background="#FFE65618">
                                <Image  HorizontalAlignment="Center" VerticalAlignment="Center" Source="/BillManageWPF;component/Skin/mainUIico/TemplateManage.png" Margin="1,9,-1,1" />
                                <TextBlock   Margin="10" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Text="模板中心" Foreground="White" FontFamily="微软雅黑" FontSize="16"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Name="btnTemplate" Margin="2,2,2,2" Visibility="Hidden" MouseLeave="btnTemplate_MouseLeave" MouseDown="btnTemplate_MouseDown"   >
                        <Border BorderThickness="5" BorderBrush="AliceBlue"  CornerRadius="10,10,10,10" >
                            <Grid Background="#FFE65618">
                                <TextBlock   Margin="20"  HorizontalAlignment="Center" VerticalAlignment="Top"  Text="点击进入模板中心" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                                <TextBlock  Margin="10" TextWrapping="Wrap" HorizontalAlignment="Center"  VerticalAlignment="Center" Text="在这一部分，您可以查看所有模板、自定义票据模板，选择模板查询打印票据等" Foreground="White" FontFamily="微软雅黑" FontSize="16"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                <Grid Margin="5">
                    <Grid  Name="btnDatasourceIcon" Margin="2,2,2,2"  Visibility="Visible" MouseEnter="btnDatasourceIcon_MouseEnter" >
                        <Border BorderThickness="5" BorderBrush="DarkGreen"  CornerRadius="10,10,10,10" >
                            <Grid  Background="#FFFFB500">
                                <Image  HorizontalAlignment="Center" VerticalAlignment="Center" Source="/BillManageWPF;component/Skin/mainUIico/DataSytem.png" />
                                <TextBlock Margin="10" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Text="资料中心" Foreground="White" FontFamily="微软雅黑" FontSize="16"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Name="btnDatasource"  Margin="2,2,2,2" Visibility="Hidden" MouseLeave="btnDatasource_MouseLeave" MouseDown="btnDatasource_MouseDown">
                        <Border BorderThickness="5" BorderBrush="AliceBlue"  CornerRadius="10,10,10,10" >
                            <Grid Background="#FFFFB500">
                                <TextBlock   Margin="20"  HorizontalAlignment="Center" VerticalAlignment="Top"  Text="点击进入资料中心" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                                <TextBlock   Margin="10" TextWrapping="Wrap" HorizontalAlignment="Center"  VerticalAlignment="Center" Text="在这一部分，您可以更新系统中的资料表，以便输入票据时方便的绑定信息" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                <Grid Margin="5">
                        <Grid  Name="btnBillIcon" Margin="2,2,2,2"  Visibility="Visible"   MouseEnter="btnBillIcon_MouseEnter">
                            <Border BorderThickness="5" BorderBrush="DarkGreen"  CornerRadius="10,10,10,10" >
                                <Grid  Background="#FFF87F14">
                                    <Image  HorizontalAlignment="Center" VerticalAlignment="Center" Source="/BillManageWPF;component/Skin/mainUIico/BillManage.png" />
                                    <TextBlock Margin="10" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Text="票据中心" Foreground="White" FontFamily="微软雅黑" FontSize="16"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <Grid Name="btnBill"  Margin="2,2,2,2" Visibility="Hidden"   MouseLeave="btnBill_MouseLeave" MouseDown="btnBill_MouseDown">
                            <Border BorderThickness="5" BorderBrush="AliceBlue"  CornerRadius="10,10,10,10" >
                                <Grid Background="#FFF87F14">
                                    <TextBlock   Margin="20"  HorizontalAlignment="Center" VerticalAlignment="Top"  Text="点击进入票据中心" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                                    <TextBlock   Margin="10" TextWrapping="Wrap"  HorizontalAlignment="Center"  VerticalAlignment="Center" Text="在这一部分，您可以查询统计选定模板的票据信息" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                    <Grid Margin="5">
                            <Grid  Name="btnUsersIcon" Margin="2,2,2,2"  Visibility="Visible"    MouseEnter="btnUsersIcon_MouseEnter" >
                                <Border BorderThickness="5" BorderBrush="DarkGreen"  CornerRadius="10,10,10,10" >
                                    <Grid  Background="#FF1A69B3">
                                        <Image  HorizontalAlignment="Center" VerticalAlignment="Center" Source="/BillManageWPF;component/Skin/mainUIico/userinfo.png" />
                                        <TextBlock  Margin="10" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Text="用户中心" Foreground="White" FontFamily="微软雅黑" FontSize="16"/>
                                    </Grid>
                                </Border>
                            </Grid>
                            <Grid Name="btnUsers"  Margin="2,2,2,2" Visibility="Hidden" MouseLeave="btnUsers_MouseLeave" MouseDown="btnUsers_MouseDown">
                                <Border BorderThickness="5" BorderBrush="AliceBlue"  CornerRadius="10,10,10,10" >
                                    <Grid Background="#FF1A69B3">
                                        <TextBlock   Margin="20"  HorizontalAlignment="Center" VerticalAlignment="Top"  Text="点击进入用户中心" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                                        <TextBlock   Margin="10" TextWrapping="Wrap" HorizontalAlignment="Center"  VerticalAlignment="Center" Text="在这一部分，您可以维护系统所有用户信息（需要权限）和个人信息" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                        <Grid Margin="5">
                    <Grid  Name="btnSystemsSetIcon" Margin="2,2,2,2"  Visibility="Visible" MouseEnter="btnSystemsSetIcon_MouseEnter">
                        <Border BorderThickness="5" BorderBrush="DarkGreen"  CornerRadius="10,10,10,10" >
                            <Grid  Background="#FF6B6B6B">
                                <Image  HorizontalAlignment="Center" VerticalAlignment="Center" Source="/BillManageWPF;component/Skin/mainUIico/setSystem.png" />
                                <TextBlock Margin="10" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Text="设置中心" Foreground="White" FontFamily="微软雅黑" FontSize="16"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Name="btnSystemsSet"  Margin="2,2,2,2" Visibility="Hidden" MouseLeave="btnSystemsSet_MouseLeave" MouseDown="btnSystemsSet_MouseDown">
                        <Border BorderThickness="5" BorderBrush="AliceBlue"  CornerRadius="10,10,10,10" >
                            <Grid Background="#FF6B6B6B">
                                <TextBlock   Margin="20"  HorizontalAlignment="Center" VerticalAlignment="Top"  Text="点击进入设置中心" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                                <TextBlock  Margin="10"  TextWrapping="Wrap" HorizontalAlignment="Center"  VerticalAlignment="Center" Text="在这一部分，您可以设置系统属性（包括打印方案、公司信息、账套信息等" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                <Grid Margin="5">
                    <Grid  Name="btnHelperIcon" Margin="2,2,2,2"  Visibility="Visible"   MouseEnter="btnHelperIcon_MouseEnter">
                        <Border BorderThickness="5" BorderBrush="DarkGreen"  CornerRadius="10,10,10,10" >
                            <Grid  Background="#FF3554D3">
                                <Image  HorizontalAlignment="Center" VerticalAlignment="Center" Source="/BillManageWPF;component/Skin/mainUIico/HelperCenter.png" />
                                <TextBlock  Margin="10" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Text="帮助中心" Foreground="White" FontFamily="微软雅黑" FontSize="16"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Name="btnHelper"  Margin="2,2,2,2" Visibility="Hidden" MouseLeave="btnHelper_MouseLeave" MouseDown="btnHelper_MouseDown">
                        <Border BorderThickness="5" BorderBrush="AliceBlue"  CornerRadius="10,10,10,10" >
                            <Grid Background="#FF3554D3">
                                <TextBlock   Margin="20"  HorizontalAlignment="Center" VerticalAlignment="Top"  Text="点击进入帮助中心" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                                <TextBlock   Margin="10"  TextWrapping="Wrap" HorizontalAlignment="Center"  VerticalAlignment="Center" Text="在这一部分，您可以查看系统的帮助信息，包括软件的操作以及开发者信息等" Foreground="White" FontFamily="微软雅黑" FontSize="22"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

            </UniformGrid>
        </Grid>
    </Grid>
</Window>
