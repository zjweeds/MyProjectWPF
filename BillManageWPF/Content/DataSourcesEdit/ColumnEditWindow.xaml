<Window x:Class="BillManageWPF.Content.DataSourcesEdit.ColumnEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="资料表编辑页面" Height="150" Width="300" WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResizeWithGrip" Loaded="Window_Loaded" Background="#FF1A69B3" Foreground="WhiteSmoke">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="请输入列名:" VerticalContentAlignment="Center" Margin="3"  Foreground="WhiteSmoke" FontSize="18"/>
            <TextBox Name="txtTypeName" Text="" VerticalContentAlignment="Center" Margin="3,3,0,3" MinWidth="150" Width="191"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Name="btnQueDing" Content="确定" Margin="3,3,3,3" Click="btnQueDing_Click" />
            <Button Name="btnQuXiao" Content="取消" Margin="3,3,3,3" Click="btnQuXiao_Click" />
        </StackPanel>
    </Grid>
</Window>
